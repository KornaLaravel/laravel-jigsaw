#!/usr/bin/env php
<?php

define('JIGSAW_START', microtime(true));

require_once __DIR__ . '/jigsaw-core.php';

/** @var \Illuminate\Container\Container $container */

$app = new \Symfony\Component\Console\Application('Jigsaw', '1.3.45');
$app->add($container[\TightenCo\Jigsaw\Console\InitCommand::class]);
$app->add(new \TightenCo\Jigsaw\Console\BuildCommand($container));
$app->add(new \TightenCo\Jigsaw\Console\ServeCommand($container));
\TightenCo\Jigsaw\Jigsaw::addUserCommands($app, $container);
$app->run();
